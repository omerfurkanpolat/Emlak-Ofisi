@model AgentSignupViewModel
@{
    ViewData["Title"] = "CreateAgent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 " style="position: relative; margin: auto; ">
      

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>}

        <form asp-controller="Admin" asp-action="CreateAgent" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="UserName" value="@Model.UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="EmailAdress" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="EmailAdress" type="email" value="@Model.EmailAdress" class="form-control" />
                    <span asp-validation-for="EmailAdress" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="AgentCompanyName" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="AgentCompanyName"  value="@Model.AgentCompanyName" class="form-control" />
                    <span asp-validation-for="AgentCompanyName" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-md-7 offset-md-5">
                    <button type="submit" class="btn " style="background-color:navy; color:white;">GÖNDER</button>
                </div>
            </div>

        </form>

    </div>
</div>

